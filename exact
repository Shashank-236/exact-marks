#include <iostream>
using namespace std;

int main() {
    int t;
    cin>>t;
    while(t!=0)
    {
        
        int n,x;
        cin>>n>>x;
        int a=0,b=0,c=0;
         if(x%3==0)
        {
            a=a+(x/3);
        }
        else if(x%3==1)
        {
            a=a+(x/3)+1;
            b=b+2;
        }
         else if(x%3==2)
        {
            a=a+(x/3)+1;
            b=b+1;
        }
     if(a+b<=n)
     {
         cout<<"YES"<<endl<<a<<" "<<b<<" "<<n-a-b<<endl;
     }
     else{
         cout<<"NO"<<endl;
     }
     --t;
    }
	// your code goes here
	return 0;
}
